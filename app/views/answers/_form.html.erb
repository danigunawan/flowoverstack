<div class="col-md-12">
  <%= form_with model: answer, url: question_answers_path(question), local: true do |f| %>
    <%= render 'shared/error_messages', model: answer %>

    <div class="form-group">
      <%= f.label :body, "Nueva Respuesta:" %>
      <%= f.text_area :body, rows: 5, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit action, class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
